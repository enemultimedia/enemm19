<script type="text/javascript">
  $(document).ready(() => {
    var pathname = window.location.pathname;
    var pathname_array = pathname.split('/');
    console.log(pathname_array);
    if(pathname_array.length == 3) {
      var slug = pathname_array[2];
      console.log(slug);
      myFunction(slug);
      openInfo(slug);
    }
  });
</script>
