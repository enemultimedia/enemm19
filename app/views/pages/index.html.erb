<%= stylesheet_link_tag    'pages', media: 'all', 'data-turbolinks-track': 'reload' %>

<div class="container">
  <div class="item header">
    <div class="title center">
      <h1>ENEMM'19</h1>
    </div>
  </div>
  <div class="item logo info center hidden-bc">
    <img src="<%= image_path('logo-small.svg') %>">
    <div class="top">
      <h1>Encontro Nacional<br/>Estudantes Multimédia</h1>
    </div>
    <div class="bottom">
      <div class="location">
        <h2>coimbra</h2>
      </div>
      <div class="date">
        <h2>1-4 de Abril<br/>2019</h2>
      </div>
    </div>
  </div>
  <div class="item logo center hidden-mc hidden-sc">
    <img src="<%= image_path('logo.svg') %>">
  </div>
  <div class="item info hidden-mc hidden-sc">
    <div class="top">
      <h1>Encontro Nacional<br/>Estudantes Multimédia</h1>
    </div>
    <div class="bottom">
      <div class="location">
        <h2>coimbra</h2>
      </div>
      <div class="date">
        <h2>1-4 de Abril<br/>2019</h2>
      </div>
    </div>
  </div>
  <div class="item matrix">
    <div class="square"></div>
    <div class="square"></div>
    <div class="square"></div>
    <div class="square line-sc"></div>
    <div class="square"></div>
    <div class="square"></div>
