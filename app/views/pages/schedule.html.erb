    <div class="matrix_day1 item">
      <% events_day1 = @events[1] %>
      <% events_day1.each do |event| %>
        <div class="activity_info right">
          <p><%= event.time_range %></p>
        </div>
        <div class="activity_info open_info" onclick="openInfo()">
          <p><%= event.title %></p>
        </div>
        <div class="activity_info_hidden" onclick="openInfo()">
