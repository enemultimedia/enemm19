              <h5>Conversa aberta — <%= event.speakers.map(&:name).join(', ') %></h5>
            <% end %>
          </div>
        <% else %>
          <div class="activity_info right">
            <p><%= slot[1].first.time_range %></p>
          </div>
          <div class="activity_info talks">
            <% slot_events = slot[1].group_by(&:track) %>
            <% slot_events.each do |track| %>
              <div class="talk_info">
                <h4>Talks - <%= track[1][0].track %></h4>
                <% track[1].sort_by(&:position).each do |event| %>
                  <div>
                    <p onclick="openInfo()"><%= event.title %></p>
                    <% if event.speakers.any? %>
                      <h5><%= event.speakers.map(&:name).join(', ') %></h5>
                    <% else %>
                      <h5>Por Anunciar</h5>
                    <% end %>
                  </div>
                <% end %>
